@page "/expetispage"

@using Simple_CSharp_Games.Games

@layout GameLayout

<div class="expetis-page-container">

    @if (!showGame)
    {
        <PageTitle>@GameTitle</PageTitle>

        <div class="expetis-hero-section">
            <div class="expetis-hero-content">
                <img class="expetis-hero-image"
                    src="/images/expectis/expetis_intro.png"
                    alt="Expeti's Game Intro" 
                 />
                <div class="expetis-hero-text">
                    <p>@GameDescription1</p>
                    <p>@GameDescription2</p>
                    <p>@GameDescription3</p>
                    <p>@GameDescription4</p>
                    <button class="btn btn-primary" @onclick="ShowGame">Play Expeti's Game</button>
                </div>
            </div>
        </div>
    }
    else
    {
        <ExpetisGame />
    }

</div>

@code {
	private string GameTitle = "Expeti's Game";
    private bool showGame = false;

    private string GameDescription1 = "This is a two-player number guessing game.";
    private string GameDescription2 = "Players alternate turns guessing a number between 0 and 9.";
    private string GameDescription3 = "Each guess must be unique and cannot be repeated.";
    private string GameDescription4 = "The first player to correctly guess the target number wins.";


        private void ShowGame()
    {
        showGame = true;
    }

}
